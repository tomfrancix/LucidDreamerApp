@model LucidDreamer.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="aboutbackground-imagelog">
    <div class="container-fluid">
        <div class="panel panel-dark" style="background-color:rgba(0,0,0,0.1);border:none;">
            <div class="row" style="text-align:center;">

                <div class="col-md-12">
                    <br />
                    <h1>CREATE ACCOUNT</h1>

                </div>
            </div>
            <div class="row" style="text-align:center;">

                <div class="col-md-4 col-md-offset-4">
                    <br />
                    <div class="panel panel-dark">
                        <section id="loginForm" style="text-align:center; width:100%;">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="col-md-8 col-md-offset-2">
                                    <div class="form-group" style="width:100%; margin:0;">
                                        @Html.LabelFor(m => m.Email, new { @class = "row control-label" })<br /><br />
                                        <div class="row">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8 col-md-offset-2">
                                    <div class="form-group" style="width:100%; margin:0;">
                                        @Html.LabelFor(m => m.Password, new { @class = "row control-label" })<br /><br />
                                        <div class="row">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div><br />
                                <div class="col-md-8 col-md-offset-2">
                                    <div class="form-group" style="width:100%; margin:0;">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "row control-label" })<br /><br />
                                        <div class="row">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        </div>
                                    </div><br /><br />
                                </div>

                                <div style="background-color:transparent; padding:3px;z-index:50;position:relative;width:256px;margin:0 auto;overflow:hidden;">

                                    <input type="submit" value="Register" style="background-color:black;z-index:100;padding:15px;padding-top:15px;width:250px;position:relative;margin:0 auto;" />

                                    <div class="spin"></div>
                                </div>

                                @* Enable this once you have account confirmation enabled for password reset functionality*@
                                <p>
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                </p>
                            }
                        </section>

                    </div>

                </div>
            </div>


        </div>
    </div>
</div><br />


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}